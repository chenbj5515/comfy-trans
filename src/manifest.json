{
    "manifest_version": 3,
    "name": "翻译助手",
    "version": "1.0.0",
    "description": "智能翻译插件",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "https://api.openai.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ]
} 